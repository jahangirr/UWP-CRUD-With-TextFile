<Page
    x:Class="DoctorList.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:DoctorList"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <Grid>
       
        <Grid Background="Pink"  Margin="20,50,0,0">
          
            <TextBlock Text="DoctorList" Margin="20,80,0,0"></TextBlock>


            <ListView x:Name="myList" Margin="20,100,0,0">
                <ListView.ItemTemplate>
                    <DataTemplate>

                        <Button Width="200" Content="{Binding doctorId}" Click="Button_Click" />


                    </DataTemplate>

                </ListView.ItemTemplate>

            </ListView>


        </Grid>
    </Grid>
   
</Page>
